<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yatoooon.managementsystem.dao.UserMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.yatoooon.managementsystem.model.User">
        <id column="id" property="id"/>
        <result column="role_id" property="roleId"/>
        <result column="name" property="name"/>
        <result column="loginname" property="loginname"/>
        <result column="password" property="password"/>
        <result column="avatar" property="avatar"/>
        <result column="create_time" property="createTime"/>
        <result column="create_user_id" property="createUserId"/>
        <result column="update_time" property="updateTime"/>
        <result column="update_user_id" property="updateUserId"/>
        <result column="state" property="state"/>
        <result column="token" property="token"/>
    </resultMap>
    <select id="selectMyPage" resultType="java.util.Map">
        SELECT * FROM user
        <where>
            ${ew.sqlSegment}
        </where>
    </select>
    <select id="getInfo" resultType="java.util.Map">
        SELECT user.name,user.avatar,role.`name` as role
        FROM `user`
        LEFT JOIN role ON `user`.role_id = role.id
        <where>
            token = #{token}
            and user.state = 1
        </where>
    </select>

</mapper>
